{{#unless (eq render_only false)}}
<div class="input-group {{#if is_nested}}disableable{{/if}}">
    <label class="checkbox">
        <input type="checkbox" class="inline-block setting-widget prop-element" name="{{setting_name}}" data-setting-widget-type="boolean"
          id="{{prefix}}{{setting_name}}"
          {{#if is_checked}}checked="checked"{{/if}}
          {{#if is_disabled}}disabled="disabled"{{/if}}>
        <span></span>
    </label>
    <label for="{{prefix}}{{setting_name}}" class="inline-block" id="{{prefix}}{{setting_name}}_label">
        {{{label}}}
        {{#if help_link}}
        {{> ../help_link_widget link=help_link }}
        {{/if}}
        {{#if tooltip}}
            <i class="fa fa-question-circle" data-toggle="tooltip" title="{{t tooltip}}"></i>
        {{/if}}
    </label>
</div>
{{/unless}}
